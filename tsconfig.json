{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "bundler",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}