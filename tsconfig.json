{
    "compilerOptions": {
      "target": "es6",
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports":true,
      "noFallthroughCasesInSwitch": true,
      "types": ["node"],
      "esModuleInterop": true
    },
    "include": [
      "src/*"
    ],
    "exclude": ["node_modules"]
  }