{
    "compilerOptions": {
      "target": "es6",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports":true,
      "noFallthroughCasesInSwitch": true,
      "types": ["node", "mocha"],
      "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }